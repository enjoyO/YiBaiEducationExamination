<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:padding="@dimen/common16dp"
    app:cardCornerRadius="@dimen/common4dp"
    app:cardMaxElevation="@dimen/common4dp"
    app:cardElevation="@dimen/common4dp"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/common10dp"
    android:layout_marginTop="@dimen/common6dp"
    android:layout_marginRight="@dimen/common10dp"
    android:layout_marginBottom="@dimen/common6dp"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:padding="@dimen/common16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
 <LinearLayout
     android:gravity="center"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

  <ImageView
      android:id="@+id/icon"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/home_cater_icon"
      />

  <TextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="会从章节模块练习题"
      />

 </LinearLayout>

 <Button
     android:id="@+id/start"
     android:text="开始答题"
     android:elevation="@dimen/common4dp"
     android:textColor="@color/text_color_normal"
     android:layout_marginTop="@dimen/common16dp"
     android:background="@drawable/bt_backgroud_selector"
     android:layout_width="@dimen/common100dp"
     android:layout_height="@dimen/common36dp"/>
</LinearLayout>


</android.support.v7.widget.CardView>








</LinearLayout>