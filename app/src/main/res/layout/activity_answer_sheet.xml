<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yibai.examination.ui.activity.AnswerSheetActivity">

    <RelativeLayout
        android:id="@+id/rlbottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common50dp">


        <Button
            android:id="@+id/commit"
            android:background="@drawable/bt_backgroud_selector"
            android:layout_centerInParent="true"
            android:text="交卷"
            android:gravity="center"
            android:textColor="@color/text_color_normal"
            android:textSize="16sp"
            android:layout_width="@dimen/common200dp"
            android:layout_height="@dimen/common40dp"/>


    </RelativeLayout>



    <ScrollView
        android:layout_above="@id/rlbottom"
     android:scrollbars="none"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/common10dp"
        android:layout_marginBottom="@dimen/common10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="单项选择题"
              android:gravity="center"
              android:textSize="@dimen/text_size_16sp"
              android:textColor="@color/text_color_normal"
              android:layout_marginTop="@dimen/common10dp"
              android:layout_marginBottom="@dimen/common10dp"
              />
          <com.yibai.examination.widget.NoScrollGridView
              android:id="@+id/single_gridview1"
              android:numColumns="5"
              android:listSelector="@color/transparent_normal"
              android:layout_marginBottom="@dimen/common10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"></com.yibai.examination.widget.NoScrollGridView>

      </LinearLayout>



    </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/common10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="多项选择题"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/text_color_normal"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common10dp"
                    />
                <com.yibai.examination.widget.NoScrollGridView
                    android:id="@+id/single_gridview2"
                    android:numColumns="5"
                    android:listSelector="@color/transparent_normal"
                    android:layout_marginBottom="@dimen/common10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.yibai.examination.widget.NoScrollGridView>

            </LinearLayout>



        </android.support.v7.widget.CardView>




        <android.support.v7.widget.CardView
            android:layout_marginBottom="@dimen/common10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="判断题"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/text_color_normal"
                    android:layout_marginTop="@dimen/common10dp"
                    android:layout_marginBottom="@dimen/common10dp"
                    />
                <com.yibai.examination.widget.NoScrollGridView
                    android:id="@+id/single_gridview3"
                    android:numColumns="5"
                    android:listSelector="@color/transparent_normal"
                    android:layout_marginBottom="@dimen/common10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></com.yibai.examination.widget.NoScrollGridView>

            </LinearLayout>



        </android.support.v7.widget.CardView>


        <TextView
            android:contentDescription="占位符"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common10dp"/>

    </LinearLayout>


  </ScrollView>





</RelativeLayout>
